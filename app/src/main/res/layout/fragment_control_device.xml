<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp"
              tools:context=".fragment.ControlDeviceFragment" android:weightSum="1">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Device:"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/device_spinner"
            android:prompt="@string/select_device"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="30dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/angle_buttons"
            android:orientation="vertical">

        <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/angle"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:max="5"
                android:progress="0"/>

        <Button
                android:id="@+id/angle_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="Submit"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:padding="15dp"/>

    </LinearLayout>

    <Button
            android:id="@+id/power_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_power"
            android:gravity="center_vertical|center_horizontal"
            android:text="Turn On / Off"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

    <Button
            android:id="@+id/food_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_power"
            android:gravity="center_vertical|center_horizontal"
            android:text="Food"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" android:visibility="gone"/>
    <Button
            android:id="@+id/water_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_power"
            android:gravity="center_vertical|center_horizontal"
            android:text="Water"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" android:visibility="gone"/>
    <LinearLayout
            android:id="@+id/remote_buttons"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_height="match_parent"
            android:weightSum="4">

        <TextView android:id="@+id/screen"
                  android:layout_width="match_parent"
                  android:layout_height="75dp"
                  android:background="#000000"
                  android:layout_marginBottom="5dp"
                  android:textColor="@color/white"
                  android:textSize="20dp"
                  android:gravity="center_vertical|center_horizontal"
                  android:layout_centerHorizontal="true"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                      android:orientation="horizontal">
            <Button android:id="@+id/button_1"
                    android:text="1"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
            />

            <Button android:id="@+id/button_2"
                    android:text="2"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
            />

            <Button android:id="@+id/button_3"
                    android:text="3"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                      android:orientation="horizontal">
            <Button android:id="@+id/button_4"
                    android:text="4"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
            />

            <Button android:id="@+id/button_5"
                    android:text="5"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
            />

            <Button android:id="@+id/button_6"
                    android:text="6"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                      android:orientation="horizontal">
            <Button android:id="@+id/button_7"
                    android:text="7"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1" />

            <Button android:id="@+id/button_8"
                    android:text="8"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"/>

            <Button android:id="@+id/button_9"
                    android:text="9"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                      android:orientation="horizontal">
            <ImageButton android:id="@+id/button_delete"
                    android:src="@drawable/ic_backspace"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                         android:gravity="center_vertical"
                         android:elevation="2dp"/>

            <Button android:id="@+id/button_0"
                    android:text="0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="match_parent"/>

            <ImageButton android:id="@+id/button_ok"
                    android:src="@drawable/ic_check"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical|center_horizontal" android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:elevation="2dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
